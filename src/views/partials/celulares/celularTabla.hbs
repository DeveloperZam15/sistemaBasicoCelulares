{{#if celulares}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr class="text-center">
            <th>Num.</th>
            <th>Clave</th>
            <th>Marca</th>
            <th>Precio</th>
            <th>Fecha de Lanzamiento</th>
            <th>RAM</th>
            <th>Almacenamiento</th>
            <th>Cantidad de Camaras</th>
            <th>Acciones</th>
    </thead>
    <body>
        {{#each celulares}}
        <tr>
            <td>{{@index}}</td>
            <td>{{clave}}</td>
            <td>{{marca}}</td>
            <td>{{precio}}</td>
            <td>{{fechaLanzamiento}}</td>
            <td>{{ram}}</td>
            <td>{{almacenamiento}}</td>
            <td>{{cantCamaras}}</td>
            <td>
                {{#if opcion}}
                    <a href="/statusCelulares/{{_id}}" class="btn btn-warning">EN STOCK</a>
                {{else}}
                    <a href="/statusCelulares/{{_id}}" class="btn btn-success">SIN STOCK</a>
                {{/if}}

                <a href="/updateCelulares/{{_id}}" class="btn btn-info">Actualizar</a>
                <a href="/deleteCelulares/{{_id}}" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
        {{/each}}
    </body>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
        <h1>No hay Celulares registrados</h1>
        <img src="/icons/file.png" class="w-75">
    </div>
</div>
{{/if}}